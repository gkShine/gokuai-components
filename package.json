{
  "name": "gokuai-components",
  "version": "1.0.0",
  "description": "gokuai-components",
  "main": "index.js",
  "files": [
    "lib",
    "src",
    "packages"
  ],
  "scripts": {
    "build:theme": "gulp build --gulpfile packages/default-theme/gulpfile.js && cp -rf packages/default-theme/lib lib/default-theme",
    "build:file": "node build/bin/gen-components.js && node build/bin/build-entry.js",
    "build:main": "webpack --config build/webpack.config.js",
    "build:component": "webpack --config build/webpack.component.js",
    "build": "npm run clean && npm run build:file && npm run build:main && npm run build:component",
    "clean": "rimraf lib && rimraf packages/*/lib"
  },
  "dependencies": {
    "vue-virtual-scroller": "^0.12.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.6",
    "babel-loader": "^7.1.5",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "css-loader": "^1.0.0",
    "eslint": "^5.3.0",
    "font-awesome": "^4.7.0",
    "json-templater": "^1.2.0",
    "lodash": "^4.17.10",
    "node-compass": "^0.2.4",
    "node-sass": "^4.9.3",
    "sass-loader": "^7.1.0",
    "uppercamelcase": "^3.0.0",
    "vue": "^2.5.17",
    "vue-loader": "^15.3.0",
    "vue-template-compiler": "^2.5.17",
    "webpack": "^4.16.5",
    "webpack-cli": "^3.1.0",
    "webpack-node-externals": "^1.7.2"
  },
  "repository": {
    "type": "git",
    "url": "git@repo.gokuai.cn:web/gokuai-components.git"
  },
  "license": "MIT"
}
